{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h1 class="h1">Gestion des articles</h1>
        </div>
    </div>

    <div class="container">
        <nav aria-label="breadcrumb" >
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('article_index') }}">Articles</a></li>
                <li class="breadcrumb-item active" aria-current="page">Liste des articles</li>
            </ol>
        </nav>
        <div class="row">
            {% for article in articles %}
               <div class="col-4">
                   <div class="card mb-5" >
                       <img class="card-img-top" src="https://picsum.photos/200/100" alt="Card image cap">
                       <div class="card-body">
                           <h5 class="card-title"><a href="{{ path('article_show', {'id': article.id}) }}">{{ article.titre}}</a></h5>
                           <p class="card-text text-justify">{{ article.resume|nl2br}}</p>
                           <div class="text-right">
                               <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary">Modifier</a>
                           </div>
                       </div>
                   </div>
               </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
